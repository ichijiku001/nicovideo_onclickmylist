{
    "name": "ニコニコ動画 ワンクリックマイリスト",
    "version": "1.0",
    "manifest_version": 2,
    "description": "",
    "browser_action": {
      "default_title": "マイリスト設定",
      "default_popup": "/html/popup.html"
    },
    "content_scripts": [
      {
        "js": ["/js/jquery.min.js", "/js/script.js"],
        "css": ["/css/style.css"],
        "matches": ["https://www.nicovideo.jp/watch/*"],
        "all_frames": true,
        "run_at": "document_end"
      }
    ],
    "background": {
      "scripts": ["/js/jquery.min.js", "/js/background.js"],
      "persistent": false
    },
    "permissions": [
      "storage",
      "tabs",
      "*://www.nicovideo.jp/*"
    ]
}
  